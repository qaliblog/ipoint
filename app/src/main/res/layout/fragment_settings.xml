<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="Back"
        android:elevation="8dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:paddingTop="72dp"
        android:fillViewport="true"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logcat Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logcat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:id="@+id/logcat_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000000"
            android:padding="8dp"
            android:visibility="gone">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/logcat_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/logcat_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:text="Waiting for logs..."
                    android:padding="4dp" />
            </androidx.core.widget.NestedScrollView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/toggle_logcat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Logcat"
                android:layout_marginEnd="8dp" />
                
            <Button
                android:id="@+id/copy_logcat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Copy All"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Movement Multipliers -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movement Multipliers"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- X Movement Multiplier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X Movement Multiplier"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/x_movement_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/x_movement_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/x_movement_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Y Movement Multiplier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y Movement Multiplier"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/y_movement_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/y_movement_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/y_movement_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Eye Position Effects -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eye Position Effects"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Eye Position X Effect (Range Amplifier) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eye Position X Range Effect"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/eye_pos_x_effect_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/eye_pos_x_effect_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/eye_pos_x_effect_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Eye Position X Multiplier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eye Position X Multiplier"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/eye_pos_x_mult_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/eye_pos_x_mult_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/eye_pos_x_mult_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Eye Position Y Effect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eye Position Y Effect"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/eye_pos_y_effect_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/eye_pos_y_effect_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/eye_pos_y_effect_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Eye Position Y Multiplier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eye Position Y Multiplier"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/eye_pos_y_mult_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/eye_pos_y_mult_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/eye_pos_y_mult_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Distance-Based Range (Eye Area) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance-Based Range (Eye Area)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Distance X Multiplier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distance X Range Multiplier"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/distance_x_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/distance_x_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/distance_x_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Distance Y Multiplier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distance Y Range Multiplier"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/distance_y_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/distance_y_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/distance_y_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Wake Lock Toggle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wake Lock"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keep Camera Active in Background"
                android:textSize="14sp" />

            <androidx.appcompat.widget.Switch
                android:id="@+id/wake_lock_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Blink Detection Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blink Detection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Blink Threshold -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blink Threshold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/blink_threshold_value"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.3"
                android:textSize="14sp"
                android:inputType="numberDecimal|numberSigned"
                android:minWidth="80dp"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/blink_threshold_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/blink_threshold_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Use One Eye Detection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Use One Eye Detection"
                android:textSize="14sp" />

            <androidx.appcompat.widget.Switch
                android:id="@+id/use_one_eye_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Instructions and Permissions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup Instructions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For iPoint to work properly, you need to enable the following permissions:"
            android:textSize="14sp"
            android:padding="8dp" />

        <!-- Accessibility Service -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Accessibility Service (Required for mouse control)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allows iPoint to move the mouse cursor and perform clicks."
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/open_accessibility_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Accessibility Settings"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Overlay Permission -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Display Over Other Apps (Required for pointer display)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allows iPoint to display the cursor overlay on top of all apps."
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/open_overlay_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Overlay Permission Settings"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Notification Permission -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Notifications (Required for background operation)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allows iPoint to show status notifications and keep camera active in background."
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note: Enable this in Android Settings > Apps > iPoint > Notifications"
                android:textSize="11sp"
                android:textStyle="italic"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
